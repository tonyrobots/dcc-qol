{
    "id": "dcc-qol",
    "title": "DCC Quality of Life Improvements",
    "description": "Various automation and quality of life improvements for Dungeon Crawl Classics.",
    "version": "1.1.0",
    "library": "false",
    "compatibility": {
        "minimum": 13,
        "verified": 13,
        "maximum": 13
    },
    "authors": [
        {
            "name": "tonyrobots",
            "url": "https://github.com/tonyrobots/"
        }
    ],
    "relationships": {
        "systems": [
            {
                "id": "dcc",
                "type": "system",
                "compatibility": {
                    "minimum": "0.60.0"
                }
            }
        ],
        "requires": [
            {
                "id": "socketlib",
                "type": "module"
            }
        ]
    },
    "esmodules": ["scripts/dcc-qol.js"],
    "styles": ["styles/dcc-qol.css"],
    "languages": [
        {
            "lang": "en",
            "name": "English",
            "path": "language/en.json"
        },
        {
            "lang": "es",
            "name": "Spanish",
            "path": "language/es.json"
        },
        {
            "lang": "fr",
            "name": "French",
            "path": "language/fr.json"
        },
        {
            "lang": "pt-br",
            "name": "Portuguese (Brasil)",
            "path": "language/pt-br.json"
        }
    ],
    "url": "#{URL}#",
    "manifest": "#{MANIFEST}#",
    "download": "#{DOWNLOAD}#",
    "license": "LICENSE",
    "readme": "README.md",
    "changelog": "https://github.com/tonyrobots/dcc-qol/blob/main/CHANGELOG.md",
    "socket": true
}
